{% extends "::layout.html.twig" %}
{% block head %}

    <link rel="stylesheet" href="{{ asset('css/demo_table.css') }}" type="text/css"/>
    <script type="text/javascript" language="javascript" src="{{ asset('js/jquery.dataTables.js') }}"></script>
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function() {
            $('#example').dataTable();
        } );
    </script>
{% endblock %}


{% block body %}

    <center><span id="titre">Users</span></center>

    
    
    <table cellpadding="0" cellspacing="0" class="display" id="example"  border="0"width="100%">
        <thead>
        <tr>
            <th>Pseudo</th>
            <th>Email</th>
            <th>Projets associés</th>
        </tr>
        </thead>
        <tbody>
    {%  for user in users %}
        <tr>
           <td> {{user.username}}</td>
           <td> {{user.email}}</td>
           <td><a href="{{ path('cnes_philae_default_projetsuser',{'idUser' : user.id})}}">Voir les projets associés</a></td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}